{
  "id": "com.youtube",
  "name": {
    "en": "YouTube"
  },
  "description": {
    "en": "Search YouTube, play playlists"
  },
  "version": "0.2.0",
  "compatibility": "0.x",
  "category": "music",
  "media": [
    "play",
    "pause",
    "search"
  ],
  "images": {
    "large": "assets/images/large.png",
    "small": "assets/images/small.png"
  },
  "author": {
    "name": "Matjaž Lipuš",
    "website": "http://matjaz.info",
    "email": "matjazl@gmail.com"
  },
  "permissions": [
    "homey:manager:media"
  ],
  "flow": {
    "triggers": [
      {
        "id": "youtubeMediaChanged",
        "title": {
          "en": "YouTube media changed"
        },
        "tokens": [
          {
            "name": "url",
            "title": {
              "en": "URL"
            }
          }
        ]
      }
    ],
    "actions": [
      {
        "id": "searchYoutube",
        "title": {
          "en": "Search YouTube"
        },
        "args": [
          {
            "name": "source",
            "type": "autocomplete",
            "placeholder": {
              "en": "Find a video..."
            }
          }
        ]
      },
      {
        "id": "searchYoutubeLive",
        "title": {
          "en": "Search YouTube (live)"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "query",
            "type": "text",
            "placeholder": {
              "en": "search..."
            }
          },
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "first",
                "label": {
                  "en": "First"
                }
              },
              {
                "id": "random",
                "label": {
                  "en": "Random"
                }
              }
            ]
          }
        ]
      },
      {
        "id": "getYoutubePlaylistURL",
        "title": {
          "en": "Get YouTube playlist"
        },
        "fluidArgs": true,
        "args": [
          {
            "name": "url",
            "type": "text",
            "placeholder": {
              "en": "Playlist URL"
            }
          },
          {
            "name": "mode",
            "type": "dropdown",
            "values": [
              {
                "id": "next",
                "label": {
                  "en": "Next"
                }
              },
              {
                "id": "shuffle",
                "label": {
                  "en": "Shuffle"
                }
              },
              {
                "id": "first",
                "label": {
                  "en": "First"
                }
              }
            ]
          }
        ]
      }
    ]
  }
}